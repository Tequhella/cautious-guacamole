<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ynov.m2.advanced_software_development.cautious_guacamole.client.controller.LoginPageController">
    <children>
        <VBox spacing="15" alignment="CENTER" maxWidth="300">
            <Label text="Connexion" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Champ Email -->
            <TextField promptText="Email" fx:id="emailField" />

            <!-- Champ Mot de Passe -->
            <PasswordField promptText="Mot de passe" fx:id="passwordField" />

            <!-- Boutons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Mot de passe oublié ?" fx:id="forgotPasswordButton" onAction="#handleForgotPassword" />
                <Button text="Créer un compte" fx:id="createAccountButton" onAction="#handleCreateAccount" />
            </HBox>

            <!-- Bouton Connexion -->
            <Button text="Se connecter" fx:id="loginButton" maxWidth="Infinity" />
        </VBox>
    </children>
</StackPane>